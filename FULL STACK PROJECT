    <script>
const uploadArea = document.getElementById("uploadArea");
const fileInput = document.getElementById("fileInput");
const analyzeBtn = document.getElementById("analyzeBtn");
const resultsSection = document.getElementById("resultsSection");
let selectedFile = null;
let scanCount = 0; // to alternate results

uploadArea.addEventListener("click", () => fileInput.click());

uploadArea.addEventListener("dragover", (e) => {
  e.preventDefault();
  uploadArea.classList.add("dragover");
});

uploadArea.addEventListener("dragleave", () => {
  uploadArea.classList.remove("dragover");
});

uploadArea.addEventListener("drop", (e) => {
  e.preventDefault();
  uploadArea.classList.remove("dragover");
  const files = e.dataTransfer.files;
  if (files.length > 0) handleFile(files[0]);
});

fileInput.addEventListener("change", (e) => {
  if (e.target.files.length > 0) handleFile(e.target.files[0]);
});

function handleFile(file) {
  selectedFile = file;
  uploadArea.querySelector(".upload-text").textContent = Selected: ${file.name};
  uploadArea.querySelector(".upload-hint").textContent = Size: ${(file.size / 1024 / 1024).toFixed(2)} MB;
  analyzeBtn.disabled = false;
}

analyzeBtn.addEventListener("click", () => {
  if (!selectedFile) return;

  analyzeBtn.textContent = "Analyzing...";
  analyzeBtn.disabled = true;

  // Simulate analysis delay
  setTimeout(() => {
    scanCount++;
    const isFake = scanCount % 2 === 0; // 1st = real, 2nd = fake, alternating
    const confidence = isFake ? 85 : 95;

    resultsSection.classList.add("active");
    const resultStatus = document.getElementById("resultStatus");
    const confidenceFill = document.getElementById("confidenceFill");
    const confidenceText = document.getElementById("confidenceText");

    resultStatus.textContent = isFake ? "DEEPFAKE DETECTED" : "AUTHENTIC";
    resultStatus.className = result-status ${isFake ? "fake" : "real"};

    // Smooth fill animation
    confidenceFill.style.width = "0%";
    setTimeout(() => {
      confidenceFill.style.width = ${confidence}%;
    }, 100);

    confidenceText.textContent = ${confidence}% Confidence;

    analyzeBtn.textContent = "Analyze Another";
    analyzeBtn.disabled = false;

    // Update dashboard numbers
    const totalScans = document.getElementById("totalScans");
    totalScans.textContent = (parseInt(totalScans.textContent.replace(",", "")) + 1).toLocaleString();

    if (isFake) {
      const deepfakes = document.getElementById("deepfakesDetected");
      deepfakes.textContent = parseInt(deepfakes.textContent) + 1;
    }
  }, 2000);
});
</script>

